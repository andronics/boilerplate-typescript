{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",                          
    "module": "commonjs",                     
    "lib": ["es2017","es7","es6", "dom"],     
    "declaration": true,                      
    "outDir": "dist",                         
    "rootDir": "lib",                         
    "strict": true,                           
    "typeRoots": [
      "types"
    ],
    // "types": ["config-yml"],                                                
    "esModuleInterop": true                   
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
